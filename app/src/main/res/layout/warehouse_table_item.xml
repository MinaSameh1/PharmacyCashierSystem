<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/pharmtile"
            android:layout_width="412dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewWarehouseTableWarehouseID"
                android:text="ID:"
                android:textSize="18sp"
                android:fontFamily="@font/balthazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/textViewWarehouseTableName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balthazar"
                android:textSize="18sp"
                android:text=" Name:"
                android:layout_below="@+id/textViewWarehouseTableWarehouseID"
                />
            <TextView
                android:id="@+id/textViewWarehouseTablePassword"
                android:text="Pass:"
                android:layout_below="@+id/textViewWarehouseTableName"
                android:fontFamily="@font/balthazar"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewWarehouseTableAddress"
                android:text="Address:"
                android:layout_below="@+id/textViewWarehouseTablePassword"
                android:fontFamily="@font/balthazar"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textViewWarehouseTableItemSupplied"
                android:text="ItemID supplied:"
                android:layout_below="@+id/textViewWarehouseTableAddress"
                android:fontFamily="@font/balthazar"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>